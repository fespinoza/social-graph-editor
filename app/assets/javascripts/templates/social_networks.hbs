<div class="fluid-row">
  <div class="span12">
    <ul class="breadcrumb">
      <li><a href="/"><i class="icon-home"></i></a> <span class="divider">/</span></li>
      <li>{{#linkTo "social_networks"}}Social Networks{{/linkTo}} <span class="divider">/</span></li>
    </ul>
  </div>
</div>

<div class="fluid-row">
  <div class="span4">
     <div id="social_networks" class="well items_list"> 
      {{#each social_network in controller}}
        <div class="item">
          {{#linkTo "social_network" social_network}}
            {{ social_network.name }}
          {{/linkTo}}

          <div class="operations">
            {{#linkTo "social_networks.edit" social_network class="edit"}}
              <i class="icon-edit"></i>
            {{/linkTo}}
            <a href="#" {{action "delete" social_network}} class="delete">
              <i class="icon-trash"></i>
            </a>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  <div class="span8">
    {{outlet}}
  </div>
</div>
