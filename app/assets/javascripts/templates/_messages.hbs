{{#if errorMessage}}
  <p class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{errorMessage}}
  </p>
{{/if}}

{{#if successMessage}}
  <p class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{successMessage}}
  </p>
{{/if}}

