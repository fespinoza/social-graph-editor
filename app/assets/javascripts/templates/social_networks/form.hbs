<form class="form-horizontal" {{action "submit" on="submit" target="view"}}>

  <div class="control-group">
    <label class="control-label" for="name">Name*</label>
    <div class="controls">
      {{input valueBinding="name" id="name"}}
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="description">Description</label>
    <div class="controls">
      {{textarea valueBinding="description" id="description" rows="10"}}
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary">
        {{#if isNew}}
          Create
        {{else}}
          Update
        {{/if}}
      </button>
    </div>
  </div>
</form>

<a href="#" {{action "cancel"}}>Cancel</a>
