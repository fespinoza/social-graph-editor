source 'https://rubygems.org'

gem 'rails', '3.2.13'
gem 'ember-rails'
gem 'ember-source', '1.0.0.rc6' # or the version you need
gem 'handlebars-source', '1.0.0.rc4' # or the version you need
gem 'jquery-rails'
gem 'chosen-rails'
gem 'pg'

# RDF stuff
gem 'rdf'
gem 'rdf-n3'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
  gem 'bootstrap-sass'        # use bootstrap in rails with sass
end

group :development do
  gem 'better_errors'       # awesome errors page
  gem 'binding_of_caller'   # for better errors live console work
  gem 'meta_request'        # to enable the chrome rails panel
  gem 'quiet_assets'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara'
  gem 'capybara-webkit'
  gem 'database_cleaner'
  gem 'pry-rails'                 # awesome replacement of irb
end

