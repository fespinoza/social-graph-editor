<a {{action "add"}} role="button" class="btn btn-small pull-right">
  <i class="icon-plus-sign"></i> Add
</a>

<h4>Attributes</h4>

{{#each controller}}
  <div class="field">
    {{view Ember.TextField valueBinding="key" action="save" placeholder="Key" class="input-small"}}
    {{view Ember.TextField valueBinding="value" action="save" placeholder="Value" class="input-small"}}
  </div>
{{else}}
  <p>No attributes</p>
{{/each}}
