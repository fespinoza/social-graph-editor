<div class="modal-header">
  <button type="button" class="close" {{action "cancel" target="view"}}>Ã—</button>
  {{#if currentFamily.isNew}}
    <h3>New Family</h3>
  {{else}}
    <h3>Edit Family</h3>
  {{/if}}
</div>

<div class="modal-body">
  <div class="form-horizontal">

    <div class="control-group">
      <label class="control-label" for="familyName">Name*</label>
      <div class="controls">
        {{input elementId="familyName" valueBinding="currentFamily.name"}}
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="familyColor">Color*</label>
      <div class="controls">
        {{input elementId="familyColor" valueBinding="currentFamily.color"}}
        <script type="text/javascript" charset="utf-8">
          $("#familyColor").colorPicker();
        </script>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="familyKind">Kind*</label>
      <div class="controls">
        {{view Ember.Select contentBinding="App.nodeKinds"
                            valueBinding="currentFamily.kind"
                            elementId="familyKind"
                            prompt="Select Kind"}}
      </div>
    </div>
  </div>
</div>

<div class="modal-footer">
  <!-- the button position is important to send the right event  -->
  <button class="btn btn-primary pull-right" {{action "submit" target="view"}}>
    {{#if currentFamily.isNew}}
      Create
    {{else}}
      Update 
    {{/if}}
  </button>
  <button {{action "cancel" target="view"}} class="btn">Close</button>
</div>
